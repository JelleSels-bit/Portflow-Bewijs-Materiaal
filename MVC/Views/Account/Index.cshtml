@model AccountListViewModel
@{
    ViewData["Title"] = "Accounts";
}
<h2> Accounts</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="my-4">
    <a asp-action="Create" class="text-success fs-3">
        <i class="bi bi-plus-square"></i>
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th class="col)">
                @Html.DisplayNameFor(v => v.AccountRoles[0].Account.Voornaam)
            </th>
            <th class="col ps-4">
                @Html.DisplayNameFor(v => v.AccountRoles[0].Account.Achternaam)
            </th>
            <th class="col ps-4">
                @Html.DisplayNameFor(v => v.AccountRoles[0].Account.Adres)
            </th>
            <th class="col ps-4">
                @Html.DisplayNameFor(v => v.AccountRoles[0].Account.Huisnummer)
            </th>
            <th class="col ps-4">
                @Html.DisplayNameFor(v => v.AccountRoles[0].Account.Postcode)
            </th>
            <th class="col ps-4">
                @Html.DisplayNameFor(v => v.AccountRoles[0].Account.Gemeente)
            </th>
            <th class="col ps-4">
                @Html.DisplayNameFor(v => v.AccountRoles[0].Account.Land)
            </th>
            <th class="col ps-4">
                @Html.DisplayNameFor(v => v.AccountRoles[0].Account.Email)
            </th>
            <th class="col ps-4">
                @Html.DisplayNameFor(v => v.AccountRoles[0].Rol)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var accountRole in Model.AccountRoles)
        {
            <tr class="border border-2 py-1">
                <td class="col ps-2">
                    @Html.DisplayFor(modelitem => accountRole.Account.Voornaam)
                </td>
                <td class="col ps-4">
                    @Html.DisplayFor(modelitem => accountRole.Account.Achternaam)
                </td>
                <td class="col ps-4">
                    @Html.DisplayFor(modelitem => accountRole.Account.Adres)
                </td>
                <td class="col ps-4">
                    @Html.DisplayFor(modelitem => accountRole.Account.Huisnummer)
                </td>
                <td class="col ps-4">
                    @Html.DisplayFor(modelitem => accountRole.Account.Postcode)
                </td>
                <td class="col ps-4">
                    @Html.DisplayFor(modelitem => accountRole.Account.Gemeente)
                </td>
                <td class="col ps-4">
                    @Html.DisplayFor(modelitem => accountRole.Account.Land.Naam)
                </td>
                <td class="col ps-4">
                    @Html.DisplayFor(modelitem => accountRole.Account.Email)
                </td>
                <td class="col ps-4">
                    @Html.DisplayFor(modelitem => accountRole.Rol.Name)
                </td>
                <td class="col ps-4">
                    <a asp-action="Edit" class="text-warning" asp-route-id="@accountRole.Account.Id">
                        <i class="bi bi-pen fs-5"></i>
                    </a>
                </td>
                <td class="col ps-4">
                    <a class="text-danger" onclick="showDeleteModal('@accountRole.Account.Id', '@accountRole.Account.Voornaam ' + '@accountRole.Account.Achternaam')">
                        <i class="bi bi-trash fs-5"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete modal  -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
            <div class="modal-header border-bottom">
                <h5 class="modal-title fw-bold" id="nameOfAccountToRemoveTitle">Account verwijderen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="nameOfAccountToRemovebody">
                Weet je zeker dat je dit account wilt verwijderen?
            </div>
            <div class="modal-footer border-top">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="" id="deleteAccountId" />
                    <button type="submit" name="button" value="Verwijder" class="btn btn-danger">
                        Verwijder
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function showDeleteModal(accountId, accountName) {
        document.getElementById('nameOfAccountToRemovebody').innerText = `Weet je zeker dat je dit account wilt verwijderen?\n\n${accountName}`;
        document.getElementById('nameOfAccountToRemoveTitle').innerText = `${accountName} verwijderen`;
        document.getElementById('deleteAccountId').value = accountId;

        var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }
</script>
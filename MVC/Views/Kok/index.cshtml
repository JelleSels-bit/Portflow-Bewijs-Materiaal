@model List<BestellingOverzichtViewModel>

<h2>Kok Overzicht</h2>

@* Outer form: Bewerken (opslaan van alle geselecteerde statuswijzigingen) *@
<form asp-action="Bewerken" method="post">
    @Html.AntiForgeryToken()

    <div class="row">
        @{
            int flatIndex = 0;
        }

        @for (int r = 0; r < Model.Count; r++)
        {
            var reservatie = Model[r];
            var actieveGerechten = reservatie.Gerechten.Where(g => g.StatusId != 2 && g.StatusId != 3).ToList();
            if (!actieveGerechten.Any()) continue;

            foreach (var gerecht in actieveGerechten)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            Reservatie @reservatie.ReservatieId
                        </div>
                        <div class="card-body">
                            <h5>@gerecht.ProductNaam</h5>

                            @if (!string.IsNullOrEmpty(gerecht.Opmerking))
                            {
                                <div class="text-muted small">Opmerking: @gerecht.Opmerking</div>
                            }

                            @* VERPLICHT: verborgen velden zodat modelbinding in Bewerken werkt *@
                            <input type="hidden" name="gerechten[@flatIndex].BestellingId" value="@gerecht.BestellingId" />
                            <input type="hidden" name="gerechten[@flatIndex].StatusId" id="kokStatus_@(r)_@(flatIndex)" value="@gerecht.StatusId" />

                            <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
                                @* Toggle-knop: gebruikt outer form, maar stuurt naar ToggleProductBeschikbaarheid via formaction *@
                                <div>
                                    <button type="submit"
                                            formaction="@Url.Action("ToggleProductBeschikbaarheid", "Kok")"
                                            formmethod="post"
                                            name="productId" value="@gerecht.ProductId"
                                            class="btn @(gerecht.ProductActief ? "btn-outline-warning" : "btn-outline-success")">
                                        @(gerecht.ProductActief ? "Maak onbeschikbaar" : "Maak beschikbaar")
                                    </button>
                                </div>

                                @* Kok-status knoppen (wijzigen StatusId in het hidden veld) *@
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-warning btn-status" data-target="kokStatus_@(r)_@(flatIndex)" data-value="1">In Behandeling</button>
                                    <button type="button" class="btn btn-outline-success btn-status" data-target="kokStatus_@(r)_@(flatIndex)" data-value="2">Klaar</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                flatIndex++;
            }
        }
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary btn-lg">Opslaan Alle Gerechten</button>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Stel initial active state in voor status buttons (op basis van waarde in hidden input)
            document.querySelectorAll(".btn-status").forEach(btn => {
                const targetId = btn.dataset.target;
                const input = document.getElementById(targetId);
                if (input && input.value === btn.dataset.value) btn.classList.add("active");

                btn.addEventListener("click", function () {
                    const input = document.getElementById(this.dataset.target);
                    if (!input) return;

                    // update hidden input
                    input.value = this.dataset.value;

                    // update button visuals
                    const group = this.parentElement;
                    group.querySelectorAll("button").forEach(b => b.classList.remove("active"));
                    this.classList.add("active");
                });
            });
        });
    </script>
}

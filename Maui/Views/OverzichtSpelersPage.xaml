<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITC2Wedstrijd.Views.OverzichtSpelersPage"
             xmlns:viewmodel="clr-namespace:ITC2Wedstrijd.ViewModels"
             Title="Spelers Overzicht Page"
             xmlns:models="clr-namespace:ITC2Wedstrijd.Models"
             x:DataType="viewmodel:OverzichtSpelersViewModel">

    
       <CollectionView  ItemsSource="{Binding Ploegen}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Ploeg">
                    <StackLayout>
                        <Label Text="{Binding Naam}" BackgroundColor="Gray" FontSize="Medium" />

                        <CollectionView ItemsSource="{Binding spelers}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Speler">
                                    <Label Text="{Binding VolledigeNaam, StringFormat='- {0}'}" FontSize="Small" />
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    
</ContentPage>
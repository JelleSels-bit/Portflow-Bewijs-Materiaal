<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITC2Wedstrijd.Views.PloegStatistiekenPage"
             xmlns:viewmodels="clr-namespace:ITC2Wedstrijd.ViewModels"
             xmlns:models="clr-namespace:ITC2Wedstrijd.Models"
             x:DataType="viewmodels:PloegStatistiekenViewModel" 
             Title="{Binding Title}">

    <Grid Padding="20"
          RowDefinitions="Auto, Auto, Auto"
          ColumnDefinitions="*, Auto">
       
        <StackLayout Grid.Row="0" Grid.Column="0" Padding="10">
            <Picker ItemsSource="{Binding AllPloegen}"
                    ItemDisplayBinding="{Binding Naam}" 
                    SelectedItem="{Binding SelectedPloeg}"></Picker>
        </StackLayout>
        
        <CollectionView ItemsSource="{Binding PloegenToDisplay}" SelectionMode="Single" Grid.Row="1" EmptyView="Selecteer hierboven een club aub.">
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Ploeg">
                    <Grid RowDefinitions="*" ColumnDefinitions="*,*" >
                        <Label Grid.Row="0" Grid.Column="0" Text="{ Binding Naam}" FontSize="Large" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                        <VerticalStackLayout Grid.Row="1" Grid.Column="1"
                                             VerticalOptions="Start"
                                             HorizontalOptions="Start" Padding="0,0,0,0">
                            
                        <Label Text="{Binding Gewonnen, StringFormat='Gewonnen: {0}'}" />
                        <Label Text="{Binding Gelijkspel, StringFormat='Gelijkspel: {0}'}" />
                        <Label Text="{Binding Verloren, StringFormat='Verloren: {0}'}" />
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>  
                        
        
    </Grid>
</ContentPage>